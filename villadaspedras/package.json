{
  "name": "villadaspedras",
  "version": "0.2.0",
  "description": "Automações para planilhas da Villa das Pedras",
  "author": "Leonardo Puglia",
  "license": "UNLICENSED",
  "scripts": {
    "build": "rimraf build/** dist/** && pnpm run format:source && node scripts/build-rollup.js",
    "build:watch": "rollup -c rollup.config.ts --configPlugin typescript -w",
    "watch": "pnpm run build:watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:build": "prettier --write 'build/**/*.js' 'dist/**/*.js'",
    "format:source": "prettier --write 'src/**/*.ts'"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/fs-extra": "^11.0.4",
    "@types/google-apps-script": "^1.0.97",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-googleappsscript": "^1.0.5",
    "eslint-plugin-prettier": "^5.2.6",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0"
  },
  "dependencies": {
    "@google/clasp": "3.0.3-alpha",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.39.0",
    "tslib": "^2.6.2"
  }
}
