{
  "compilerOptions": {
    "target": "ES2019",
    "module": "None",
    "lib": ["ESNext", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["google-apps-script"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
